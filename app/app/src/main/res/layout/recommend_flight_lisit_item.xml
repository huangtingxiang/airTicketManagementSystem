<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <ImageView
            android:padding="10dp"
            android:id="@+id/companyImage"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            tools:srcCompat="@tools:sample/backgrounds/scenic[8]" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_toRightOf="@id/companyImage"
            android:orientation="vertical"
            android:paddingLeft="10dp">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/startAndArrivePlace"
                    style="@style/titleLabelStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="天津到上海" />

                <TextView
                    android:id="@+id/flightPrice"
                    style="@style/titleLabelStyle"
                    android:gravity="right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="¥280起" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/flightStartDate"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="12.01出发" />

                <TextView
                    android:id="@+id/flightPlaneMessage"
                    android:layout_width="match_parent"
                    android:gravity="right"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_weight="3"
                    android:text="2.8折" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/flightStartTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="12.01出发" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>