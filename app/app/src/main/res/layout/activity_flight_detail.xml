<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".flightManagement.FlightDetailActivity">

    <com.jdxiang.airTicket.flightManagement.FlightManagementLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.jdxiang.airTicket.flightManagement.FlightManagementLayout>

    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_marginLeft="8dp"
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/text_label"
                android:text="单程"
                android:paddingTop="5dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:paddingBottom="5dp"
                android:textColor="@color/white"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/companyNameTextView"
                android:paddingTop="5dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:paddingBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="天津航空GS7881 01-01"
                android:textColor="@color/mdtp_dark_gray"
                android:textSize="16sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/startTimeTextView"
                    style="@style/titleLabelStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="07:40"
                    android:textColor="#000000"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/startAirPortTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="滨海t2"
                    android:textColor="@color/mdtp_dark_gray"
                    android:textSize="16sp" />
            </LinearLayout>

            <ImageView
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_arrow_right_fill"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/arrivalTimeTextView"
                    style="@style/titleLabelStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10:00"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/arrivalAirPortTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="浦东t1"
                    android:textColor="@color/mdtp_dark_gray"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/planeNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上航FM9070|波音738(中)"
                android:textSize="14sp"
                android:textColor="@color/mdtp_date_picker_month_day_dark_theme" />
        </LinearLayout>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/spaceList"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>